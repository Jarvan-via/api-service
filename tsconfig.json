{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6"
    ],
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "./",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    
  },
  "include": [
    "test/**/*.ts",
    "src/**/*.ts",
    "router.ts",
    "main.ts",
    "test/**/*.ts",
    "test/lib/simple-console.test.js",
    //  ".eslintrc.js"
  ],
  "exclude": [
    "src/**/*.js"
  ]
}